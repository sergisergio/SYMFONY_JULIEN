{% extends "bundle.html.twig" %}

{% block lang %}fr{% endblock %}

{% block title %}Symfony | Entity{% endblock %}

{% block main %}

    <div class="container py-5">
        <div class="row">
            <div class="col">

                <h1 class="border-bottom mb-5 pb-3">Symfony | Entity</h1>

                <table class="table table-striped table-bordered table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">NAME</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">DATE</th>
                            <th scope="col">DESCRIPTION</th>
                            <th scope="col">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                        <tr>
                            <th scope="col">#{{ event.id }}</th>
                            <td>{{ event.name }}</td>
                            <td>{{ event.price }}â‚¬</td>
                            <td>{{ event.date|date('Y-m-d') }}</td>
                            <td>{{ event.description|slice(0,50) }}...</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-secondary" onclick="javascript:window.open('{{ path('event_show', {'id': event.id}) }}','_self');">Show details</button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            
            </div>
        </div>
    </div>
    
{% endblock %}
