{% extends "bundle.html.twig" %}

{% block lang %}fr{% endblock %}

{% block title %}Movie | Show{% endblock %}

{% block main %}

    <div class="container py-5">
        <div class="row">
            <div class="col">

                <h1 class="border-bottom mb-5 pb-3">Movie Show</h1>

                <button type="button" class="btn btn-sm btn-secondary" onclick="javascript:window.open('{{ path('movie_list') }}','_self');">Back to List</button>

                <h2 class="my-3">Movie #{{ movie.id }}</h2>

                <div class="mt-3">
                    <b>Title:</b> {{ movie.title }} <br>
                    <b>Date:</b> {{ movie.date|date('Y-m-d') }} <br>
                    <b>Director:</b> {{ movie.director }} <br>
                    <b>Cast:</b>
                    <ul>
                    {% for cast in movie.cast %}
                        <li>{{ cast }}</li>
                    {% endfor %}
                    </ul>
                </div>

                <button type="button" class="btn btn-sm btn-warning" onclick="javascript:window.open('{{ path('movie_update', {'id': movie.id}) }}','_self');">Update</button>
                <button type="button" class="btn btn-sm btn-danger">Delete</button>
            
            </div>
        </div>
    </div>
    
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
$(function(){
    $(".btn-danger").click(function(){
        var del = confirm("Are you sure you want to delete this movie?");
        if (del == true) {
            window.open('{{ path('movie_delete', {'id': movie.id}) }}', '_self');
        }
    });
});
</script>
{% endblock %}