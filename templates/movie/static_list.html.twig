{% extends "bundle.html.twig" %}

{% block lang %}fr{% endblock %}

{% block title %}Static Movie | List{% endblock %}

{% block main %}

    <div class="container py-5">
        <div class="row">
            <div class="col">

                <h1 class="border-bottom mb-5 pb-3">Static Movie List</h1>

                <table class="table table-striped table-bordered table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">DATE</th>
                            <th scope="col">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for movie in movies %}
                        <tr>
                            <th scope="col">#{{ loop.index }}</th>
                            <td>{{ movie['title'] }}</td>
                            <td>{{ movie['date']|date('Y-m-d') }}</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-secondary" onclick="javascript:window.open('{{ path('movie_static_show', {'id': loop.index}) }}','_self');">Show details</button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            
            </div>
        </div>
    </div>
    
{% endblock %}
