<!DOCTYPE html>
<html class="h-100" lang="{% block lang %}en{% endblock %}"> {# Valeur par dÃ©faut "en" #}
    <head>
    
        {% block metatags %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% endblock %}

        <title>{% block title %}{% trans %} base.title {% endtrans %}{% endblock %}</title>

        {% block stylesheets %}
        <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap.min.css" />
        {% endblock %}

    </head>
    <body class="d-flex flex-column h-100">

        {% block header %}
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
                <a class="navbar-brand" href="{{ path('index') }}">{% trans %} base.header.nav.home {% endtrans %}</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarTest" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{% trans %} base.header.nav.link_1.label {% endtrans %}</a>
                            <div class="dropdown-menu" aria-labelledby="navbarTest">
                                <a class="dropdown-item" href="{{ path('reponse') }}" target="_blank">{% trans %} base.header.nav.link_1.sublink_1.label {% endtrans %}</a>
                                <a class="dropdown-item" href="{{ path('dump') }}" target="_blank">{% trans %} base.header.nav.link_1.sublink_2.label {% endtrans %}</a>
                                <a class="dropdown-item" href="{{ path('identity', {'firstname':'Julien','lastname':'VOLLE','age':33}) }}" target="_blank">{% trans %} base.header.nav.link_1.sublink_3.label {% endtrans %}</a>
                                <a class="dropdown-item" href="{{ path('forum', {'year':'2019','month':'01','id':735,'slug':'mon-fichier','_format':'json'}) }}" target="_blank">{% trans %} base.header.nav.link_1.sublink_4.label {% endtrans %}</a>
                                <a class="dropdown-item" href="{{ path('calcul_get') }}" target="_blank">{% trans %} base.header.nav.link_1.sublink_5.label {% endtrans %}</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if 'twig_' in app.request.get('_route') %}active{% endif %}" href="#" id="navbarTwig" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Twig</a>
                            <div class="dropdown-menu" aria-labelledby="navbarTwig">
                                <a class="dropdown-item {% if app.request.get('_route') == 'twig_page_1' %}active{% endif %}" href="{{ path('twig_page_1') }}">{% trans %} base.header.nav.link_2.sublink_1.label {% endtrans %}</a>
                                <a class="dropdown-item {% if app.request.get('_route') == 'twig_page_2' %}active{% endif %}" href="{{ path('twig_page_2') }}">{% trans %} base.header.nav.link_2.sublink_2.label {% endtrans %}</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle {% if 'event_' in app.request.get('_route') %}active{% endif %}" href="#" id="navbarEntity" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{% trans %} base.header.nav.link_3.label {% endtrans %}</a>
                            <div class="dropdown-menu" aria-labelledby="navbarEntity">
                                <a class="dropdown-item {% if app.request.get('_route') == 'event_list' %}active{% endif %}" href="{{ path('event_list') }}">{% trans %} base.header.nav.link_3.sublink_1.label {% endtrans %}</a>
                                <a class="dropdown-item {% if app.request.get('_route') == 'event_list_custom_1' %}active{% endif %}" href="{{ path('event_list_custom_1') }}">{% trans %} base.header.nav.link_3.sublink_2.label {% endtrans %}</a>
                                <a class="dropdown-item {% if app.request.get('_route') == 'event_list_custom_2' %}active{% endif %}" href="{{ path('event_list_custom_2') }}">{% trans %} base.header.nav.link_3.sublink_3.label {% endtrans %}</a>
                                <a class="dropdown-item {% if app.request.get('_route') == 'event_list_custom_3' %}active{% endif %}" href="{{ path('event_list_custom_3') }}">{% trans %} base.header.nav.link_3.sublink_4.label {% endtrans %}</a>
                                <a class="dropdown-item {% if app.request.get('_route') == 'event_list_custom_4' %}active{% endif %}" href="{{ path('event_list_custom_4') }}">{% trans %} base.header.nav.link_3.sublink_5.label {% endtrans %}</a>
                            </div>
                        </li>
                        <li class="nav-item"><a class="nav-link {% if app.request.get('_route') == 'movie_list' %}active{% endif %}" href="{{ path('movie_list') }}">{% trans %} base.header.nav.link_4.label {% endtrans %}</a></li>
                        <li class="nav-item"><a class="nav-link {% if 'advert_' in app.request.get('_route') %}active{% endif %}" href="{{ path('index_advert') }}">{% trans %} base.header.nav.link_5.label {% endtrans %}</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        {% endblock %}

        {% block main %}
        <div class="container flex-shrink-0">
            <div class="row">
                <div class="col">
                
                    <div class="alert alert-dark" role="alert">Template &laquo; <strong>base.html.twig</strong> &raquo;</div>
                
                </div>
            </div>
        </div>

        <div class="container py-5">
            <div class="row">
                <div class="col">

                    <h1 class="border-bottom mb-5 pb-3">Symfony </h1>
                
                </div>
            </div>
        </div>
        {% endblock %}

        {% block footer %}
        <footer class="bg-dark mt-auto">
            <div class="container text-center p-5">
                <h5 class="text-muted">{% trans %} base.footer.baseline {% endtrans %}</h5>
                <small class="text-muted">{% trans %} base.footer.powerBy {% endtrans %} <a href="https://university.sensiolabs.com/" target="_blank" class="text-white">SensioLabs University</a> &amp; <a href="https://3wa.fr/" target="_blank" class="text-white">3WAcademy</a></small>
            </div>
        </footer>
        {% endblock %}

        {% block javascripts %}
        <script src="/libs/jquery/jquery-3.3.1.min.js"></script>
        <script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        {% endblock %}

    </body>
</html>
